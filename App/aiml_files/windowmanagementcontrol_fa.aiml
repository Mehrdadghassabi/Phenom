<!-- window manager -->
    <!-- closing windows and tabs -->
    
    <category>
        <pattern>این $تب رو ببند #</pattern>
<template>
<think><set name="language">persian</set></think>
                چَشْم
                <think><system>xdotool key ctrl+w</system></think>
            </template>
    </category>

    <category>
        <pattern>این تب را ببند #</pattern>
